<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.caren.eatnow.activities.SearchActivity"
    android:background="#5993E5">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/ivIconTop"
        android:background="@drawable/food"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/etQuery"
        android:hint="What are you fancying? (eg: dinner, sushi)"
        android:textColorHint="#FFF"
        android:layout_above="@+id/etLocation"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/etLocation"
        android:hint="Where are you?"
        android:textColorHint="#FFF"
        android:layout_above="@+id/btnSearch"
        android:layout_alignLeft="@+id/etQuery"
        android:layout_alignStart="@+id/etQuery"
        android:layout_marginBottom="74dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LET ME EAT!"
        android:id="@+id/btnSearch"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:textColor="#be5e00"
        android:textSize="20sp"
        android:background="@drawable/search_btn"/>
</RelativeLayout>
