<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.caren.eatnow.fragments.BrowseFragment"
    android:background="@drawable/restaurant">

    <TextView
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="The House"
        android:id="@+id/tvName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:maxLines="1"
        android:textColor="#FFF"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="840 Columbus Street \nLine 2"
        android:id="@+id/tvDistance"
        android:textColor="#FFF"
        android:textSize="17sp"
        android:layout_alignTop="@+id/ivImage"
        android:layout_toRightOf="@+id/ivImage"
        android:layout_marginLeft="30dp"
        android:maxLines="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="San Francisco"
        android:id="@+id/tvCity"
        android:textColor="#FFF"
        android:textSize="17sp"
        android:layout_below="@id/tvDistance"
        android:layout_alignStart="@id/tvDistance"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/ivImage"
        android:src="@drawable/noimage"
        android:background="#FFF"
        android:padding="5dp"
        android:layout_below="@+id/tvName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:text="Asian Fusion, Sushi \nsecond line"
        android:id="@+id/tvCategory"
        android:textSize="20dp"
        android:textColor="#FFF"
        android:textStyle="italic"
        android:layout_below="@+id/ivImage"
        android:layout_alignStart="@+id/ivImage"
        android:layout_marginTop="15dp"
        android:layout_alignEnd="@+id/tvDistance"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="27dp"
        android:id="@+id/ivRating"
        android:src="@drawable/stars_large_4_half"
        android:layout_above="@+id/tvNumOfReviews"
        android:layout_alignLeft="@+id/tvDistance" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="320 Reviews"
        android:id="@+id/tvNumOfReviews"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/ivImage"
        android:layout_alignLeft="@+id/ivRating"
        android:layout_marginTop="5dp"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:id="@+id/rlViewYelp"
        android:layout_below="@+id/tvCategory"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btnYelpLink"
            android:text="View Yelp Link"
            android:textSize="25sp"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/transparent_btn"
            />
    </RelativeLayout>

</RelativeLayout>